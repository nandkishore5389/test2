                                        <GridViewColumn DisplayMemberBinding="{Binding Path=call_COI}" Header="call_COI" Width="80"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=call_Volume}" Header="call_Volume" Width="70"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=call_IV}" Header="call_IV" Width="40"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=call_LTP}" Header="call_LTP" Width="40"/>

                                        <GridViewColumn Header="" Width="20">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="|" TextWrapping="Wrap" Margin="0"></TextBlock>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn DisplayMemberBinding="{Binding Path=put_LTP}" Header="put_LTP" Width="40"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=put_IV}" Header="put_IV" Width="40"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=put_Volume}" Header="put_Volume" Width="70"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=put_COI}" Header="put_COI" Width="80"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=put_OI}" Header="put_OI" Width="90"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=signal}" Header="signal" Width="100"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>
                    <StackPanel Height="250" Grid.Row="2">
                        <!--<lvc1:CartesianChart  Height="250" Series="{Binding SeriesCollection}" />-->

                    </StackPanel>
                </Grid>
            </TabItem>
